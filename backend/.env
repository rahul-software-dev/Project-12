# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=5000
HOST=0.0.0.0
CLIENT_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Database Configuration (MongoDB - Local)
MONGO_URI=mongodb://localhost:27017/healthcareDB
MONGO_POOL_SIZE=10

# Authentication & Security
JWT_SECRET=super_secure_random_secret_key
JWT_EXPIRY=7d
PASSWORD_SALT_ROUNDS=12

# Cloud Storage (Optional - AWS S3 or others)
CLOUD_PROVIDER=aws
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=your_s3_bucket_name
S3_REGION=us-east-1

# Email / Notification (Optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=no-reply@yourdomain.com
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587

# Logging & Monitoring
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true

# API Keys (For 3rd-party integrations)
THIRD_PARTY_API_KEY=your_api_key_here

# Miscellaneous
SESSION_TIMEOUT=30m
MAINTENANCE_MODE=false