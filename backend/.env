# 🌍 Environment Configuration
NODE_ENV=development  # Change to 'production' in production

# 🚀 Server Configuration
PORT=5000
HOST=0.0.0.0  # Allows connections from any network (change if needed)
CORS_ORIGIN=*  # Change this to a specific domain for better security

# 🗄️ Database Configuration
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/digital_healthcare?retryWrites=true&w=majority
MONGO_POOL_SIZE=10  # Optimized connection pooling for performance

# 🔐 Authentication & Security
JWT_SECRET=super_secure_random_secret_key  # Change this in production!
JWT_EXPIRY=7d  # Token expiration time
PASSWORD_SALT_ROUNDS=12  # Increase for stronger password hashing

# 🏗️ Cloud Storage (Optional, for future)
CLOUD_PROVIDER=aws
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=your_s3_bucket_name
S3_REGION=us-east-1  # Change as per your region

# 📩 Email / Notification (Future Use)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=no-reply@yourdomain.com
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587

# 📊 Logging & Monitoring
LOG_LEVEL=info  # Options: debug, info, warn, error
ENABLE_DEBUG_LOGS=false  # Set true for verbose logging in dev

# 📈 Rate Limiting (Optional, for preventing abuse)
RATE_LIMIT_WINDOW=15  # Time window in minutes
RATE_LIMIT_MAX=100  # Max requests per window per IP

# 🛠 Feature Flags (For Future Enhancements)
ENABLE_ANALYTICS=false
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true

# 🛡️ API Keys (If using third-party integrations)
THIRD_PARTY_API_KEY=your_api_key_here

# 🔧 Miscellaneous
SESSION_TIMEOUT=30m  # Auto logout users after inactivity (future)
MAINTENANCE_MODE=false  # Set to true to disable all operations